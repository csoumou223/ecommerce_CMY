{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Fiche du produit</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                
                
                <td> <img class="img-fluid rounded" src="{{asset('uploads/'~ produit.photo )}}"></td>
                <a href="{{ path('contenu_panier_new', {'id':produit.id})}}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                </a>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">Retour à la liste</a>

    {# On peut ajouter un produit au panier seulement si on est connecté #}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="">Ajouter au panier</a>
    {% endif %}

    {# On peut modifier un produit seulement si on est ADMIN #}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
    {% endif %}

    {# On peut supprimer un produit seulement si on est ADMIN #}
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
